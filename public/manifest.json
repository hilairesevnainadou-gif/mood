  "protocol_handlers": [
    {
      "protocol": "web+bhdm",
      "url": "/client/dashboard?url=%s"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["auto", "focus-existing", "navigate-new"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "share_target": {
    "action": "/client/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "documents",
          "accept": ["application/pdf", "image/*", ".doc", ".docx"]
        }
      ]
    }
  },
  "permissions": [
    "notifications",
    "clipboard-write",
    "clipboard-read"
  ]
}